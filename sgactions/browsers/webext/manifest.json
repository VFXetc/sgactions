{
    "manifest_version": 2,
    
    "name": "SGActions",
    "description": "Enhanced action menu items.",
    "version": "1.2.0",
    
    "applications": {
      "gecko": {
        "id": "@sgactions",
        "strict_min_version": "42.0"
      }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["https://*.shotgunstudio.com/*"],
        "js": ["main.js"],
        "run_at": "document_end"
    }],

    "web_accessible_resources": [
        "page/*"
    ],

    "options_ui": {
        "browser_style": true,
        "chrome_style": true,
        "page": "options.html"
    },

    "permissions": [
        "nativeMessaging",
        "storage"
    ]
    
}