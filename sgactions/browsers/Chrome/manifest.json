{
    "manifest_version": 2,
    
    "name": "SGActions: Rich ActionMenuItems",
    "description": "Control Shotgun's action menu item icons and headings.",
    "version": "0.1",
    
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["https://*.shotgunstudio.com/*"],
        "js": ["main.js"],
        "run_at": "document_idle"
    }],

    "web_accessible_resources": [
        "page.js",
        "page.css",
        "silk/silk-icons.css",
        "silk/silk-icons.png",
        "silk/silk-icons.gif"
    ],

    "permissions": [
        "nativeMessaging"
    ]
    
}